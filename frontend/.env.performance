# Performance Optimization Environment Variables
# All flags are OFF by default for safety

# Kill switch - instantly disables all performance optimizations
PERF_DISABLE_ALL=false

# Frontend performance flags (use VITE_ prefix for React)
VITE_PERF_CSS_SPLIT=false
VITE_PERF_LCP_PRELOAD=false
VITE_PERF_FONT_STRATEGY=false
VITE_PERF_ROUTE_SPLIT=false
VITE_PERF_THIRDPARTY_DEFER=false
VITE_PERF_CLS_DIMS=false

# Backend performance flags
PERF_CACHE_HEADERS=false
PERF_COMPRESSION=false
PERF_SECURITY_HEADERS=false

# Performance monitoring
VITE_PERF_MONITORING=false

# Development/staging overrides (these can be set to true for testing)
# VITE_PERF_CSS_SPLIT=true
# VITE_PERF_LCP_PRELOAD=true
# PERF_CACHE_HEADERS=true
# PERF_COMPRESSION=true
