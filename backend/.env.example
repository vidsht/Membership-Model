# Environment Variables
NODE_ENV=development
PORT=5000

# MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/mern-template

# Session
SESSION_SECRET=your-secret-key-here-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=cards@indiansinghana.com
EMAIL_PASS=your-app-password

# WhatsApp Business API Configuration
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_business_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_business_access_token
WHATSAPP_API_VERSION=v18.0

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Admin Configuration
ADMIN_EMAIL=cards@indiansinghana.com
ADMIN_PASSWORD=change-this-password
